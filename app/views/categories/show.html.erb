<h3 class="text-primary mb-3">
  <%= @category.name %> related articles
</h3>

<%= render @category.articles %>

<% if current_user&.admin? %>
  <%= link_to 'Edit', edit_category_path(@category), class: 'btn btn-sm btn-warning mt-3' %>
  <%= link_to 'Delete', @category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger mt-3' %>
<% end %>

<%= link_to 'Back', categories_path, class: 'btn btn-sm btn-secondary mt-3' %>
